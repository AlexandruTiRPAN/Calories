<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <!-- Top title -->
    <TextView
        android:id="@+id/add_new_custom_meal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your custom meal"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Meal Name Label -->
    <TextView
        android:id="@+id/meal_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal Name:"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/add_new_custom_meal_text"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Meal Name Input -->
    <EditText
        android:id="@+id/meal_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter meal name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/meal_name_label"
        android:inputType="textPersonName" />

    <!-- Category Label -->
    <TextView
        android:id="@+id/category_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category:"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/meal_name"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Category Spinner -->
    <Spinner
        android:id="@+id/meal_category_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/meal_categories"
        android:spinnerMode="dropdown"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_label" />

    <!-- Protein -->
    <TextView
        android:id="@+id/meal_protein_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protein:"
        app:layout_constraintTop_toBottomOf="@id/meal_category_spinner"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/meal_protein"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="g"
        app:layout_constraintBaseline_toBaselineOf="@id/meal_protein_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Carbs -->
    <TextView
        android:id="@+id/meal_carbs_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carbs:"
        app:layout_constraintTop_toBottomOf="@id/meal_protein_text"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/meal_carbs"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="g"
        app:layout_constraintBaseline_toBaselineOf="@id/meal_carbs_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Fat -->
    <TextView
        android:id="@+id/meal_fat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fat:"
        app:layout_constraintTop_toBottomOf="@id/meal_carbs_text"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/meal_fat"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="g"
        app:layout_constraintBaseline_toBaselineOf="@id/meal_fat_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Buttons -->
    <Button
        android:id="@+id/close_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Close"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/meal_fat_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/save_button" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="32dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/meal_fat_text"
        app:layout_constraintStart_toEndOf="@id/close_button"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
